# This config will let Nginx serve /airbnb-onepage/ from AirBnB_clone_v2

server {
    # Open port 80 to listen for req.
    listen      80 default_server;
    listen      [::]:80 default_server ipv6only=on;

    # IP addr is as the domain name
    server_name 3.85.33.232;

    # HTTP custom header response
    add_header  X-Served-By 425843-web-01;

    # will serve route /airbnb-onepage/ from AirBnB_clone_v2
    location = /airbnb-onepage/ {
        proxy_pass http://127.0.0.1:5000/airbnb-onepage/;
    }

    # 404 error page
    error_page 404 /404.html;
    location /404 {
        root /var/www/html;
        internal;
    }
}
